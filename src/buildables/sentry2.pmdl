        }
      ]
    }
    {
      name muzzle_r
      influences [
        {
          parent S2chaingunR_02
          pos [ 0.04 0.35 23.11 ]
          hpr [ -90 90 0 ]
        }
      ]
    }
  ]

  material_groups [
    {
      name red
      materials [ "../materials/sentry1.pmat" "../materials/sentry2.pmat" ]
    }
    {
      name blue
      materials [ "../materials/sentry1_blue.pmat" "../materials/sentry2_blue.pmat" ]
    }
  ]

  pose_parameters [
    {
      name aim_pitch
      min -50 max 50
    }
    {
      name aim_yaw
      min -180 max 180
      loop 360
    }
  ]

  weight_lists [
    {
      name fire
      weights {
        "root" 0
        "upper_telescope_01" 1
        "S2turret_back" 1
